<table>
{% for f in films %}
    <tr>
	<td>{{ f.titre }}</td>
	<td><a href="{{ path('myapp_film_voir', { 'id': f.id }) }}">{{ 'voir'|trans }}</a></td>
	{% if is_granted('ROLE_ADMIN') %}
        <td><a href="{{ path('myapp_film_modifier', { 'id': f.id }) }}">{{ 'modifier'|trans }}</a></td>
	<td><a href="{{ path('myapp_film_supprimer', { 'id': f.id }) }}">{{ 'supprimer'|trans }}</a></td>
        {% endif %}
    </tr>
{% else %}
    <tr>
	<td>{{ 'film.aucun'|trans }}</td>
    </tr>
{% endfor %}
</table>