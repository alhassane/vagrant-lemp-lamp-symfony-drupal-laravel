{% extends 'MyAppSiteBundle::layout.html.twig' %}

{% block title %}
    {% if film.id %}
        {{ 'film.modifier'|trans({'%titre%':film.titre}) }}
    {% else %}
        {{ 'film.ajouter'|trans }}
    {% endif %}
{% endblock %}

{% block content %}

{% if message %}
<p class="message">{{ message }}</p>
{% endif %}
<form action="" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <input type="submit" />
</form>
<p><a href="{{ path('myapp_film_lister') }}">{{ 'film.liste.retour'|trans }}</a></p>

{% endblock %}