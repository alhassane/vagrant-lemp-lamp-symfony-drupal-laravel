{% extends 'MyAppSiteBundle::layout.html.twig' %}

{% block title %}{{ 'film.fiche'|trans({ '%titre%': film.titre}) }}{% endblock %}

{% block content %}

<p>{{ film.description }}</p>

<p>{{ 'film.categorie'|trans }} : {{ film.categorie.nom }}</p>

<p>{{ 'film.acteurs'|trans }}</p>
<ul>
{% for a in film.acteurs %}
    <li>{{ a.prenom }} {{ a.nom}}</li>
{% endfor %}
</ul>

<p><a href="{{ path('myapp_acteur_lister') }}">{{ 'film.liste.retour'|trans }}</a></p>

{% endblock %}