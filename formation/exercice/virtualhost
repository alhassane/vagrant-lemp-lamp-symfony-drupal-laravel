<VirtualHost *:80>
	ServerAlias dev.dirisi24.local
        ServerName dev.dirisi24.local
	DocumentRoot /var/www/dirisi24/web/
	<Directory /var/www/dirisi24/web>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                RewriteEngine On
                RewriteCond %{REQUEST_FILENAME} !-f
                RewriteRule ^(.*)$ app_dev.php [QSA,L]
                Order allow,deny
                allow from all
	</Directory>
</VirtualHost>

<VirtualHost *:80>
        ServerAlias prod.dirisi24.local
        ServerName prod.dirisi24.local
        DocumentRoot /var/www/dirisi24/web/
        <Directory /var/www/dirisi24/web>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                RewriteEngine On

                RewriteCond %{REQUEST_FILENAME} !-f
